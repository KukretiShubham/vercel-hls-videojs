---
import Video_ from './Video.vue'
import Debug_ from './debug.vue'
const url = Astro.url
const newURL = new URL(url)

// Pass the search property (query string) to URLSearchParams
const searchParams = new URLSearchParams(newURL.search)
const src = searchParams.get('src')
---

<div>
	<Video_
		client:only="vue"
		src={src}
		controls="true"
		autoplay="true"
		loop="true"
		muted="false"
	/>
	<Debug_ client:load />
</div>
